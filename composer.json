{
    "name":             "splash/toolkit",
    "license":          "MIT",
    "type":             "project",
    "description":      "Developer Toolkit for All Splash Modules, Bundles & Connectors Developments",
    
    "minimum-stability": "dev",
    "prefer-stable":    true,

    "require": {
        "php":                          "^7.4|^8.0",
        "ext-xml":                      "*",
        "ext-soap":                     "*",
        "ext-ctype":                    "*",
        "ext-iconv":                    "*",

        "symfony/symfony":                              "~4.4",
        "symfony/framework-bundle":                     "~4.4",
        "symfony/swiftmailer-bundle":                   "^3.2",
        "symfony/twig-bundle":                          "*",
        "symfony/web-server-bundle":                    "*",
        "symfony/webpack-encore-bundle":                "^1.12",

        "sonata-project/user-bundle":                   ">=4.0",

        "burgov/key-value-form-bundle":                 "@stable",

        "splash/php-bundle":                            "~1.0",
        "splash/console":                               "dev-master",
        "splash/openapi":                               "~1.0",
        "splash/faker":                                 "~1.0",
        "splash/sonata-admin-splash-bundle":            "1.0.x-dev",

        "splash/soap":                                  "~1.0",
        "splash/mailchimp":                             "~1.0",
        "splash/mailjet":                               "~1.0",
        "splash/sendinblue":                            "~1.0",
        "splash/shopify":                               "~1.0",
        "splash/optilog":                               "~1.0",
        "splash/recommerce":                            "~1.0",

        "phpunit/phpunit":                              ">8"
    },
    
    "require-dev": {
        "badpixxel/php-sdk":                            "~1.0"
    },
    
    "config": {
        "minimum-stability" :   "dev",
        "preferred-install": {
            "*": "dist"
        },
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "phpro/grumphp": true
        }
    },
    
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Splash\\Connectors\\":     "connectors/"
        }
    },
    
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        },
        "files": [ 
            "vendor/splash/phpcore/inc/Splash.Inc.php",
            "vendor/splash/php-bundle/src/Tests/KernelTestCase.php" 
        ]
    },
    
    "replace": {
        "paragonie/random_compat": "*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    
    "scripts": {
        "auto-scripts": [
            "php bin/console cache:clear",
            "php bin/console assets:install --relative"
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    }
}
