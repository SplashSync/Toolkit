{
    "name":             "splash/toolkit",
    "license":          "MIT",
    "type":             "project",
    "description":      "Developper Toolkit for All Splash Modules, Bundles & Connectors Developepments",
    
    "minimum-stability": "dev",
    "prefer-stable": true,
    
    "require": {
        "php":                          "^7.1",
        "ext-xml":                      "*",
        "ext-soap":                     "*",
        "ext-ctype":                    "*",
        "ext-iconv":                    "*",

        "symfony/symfony":                              "~4.2.0",
        "symfony/framework-bundle":                     "~4.2.0",
        "symfony/swiftmailer-bundle":                   "^3.2",
        "symfony/twig-bundle":                          "*",
        "symfony/web-server-bundle":                    "*",
        "sensiolabs/security-checker":                  ">6.0",

        "doctrine/doctrine-bundle":                     "^1.6",
        "doctrine/dbal":                                "<2.11",
        "doctrine/orm":                                 "^2.5",

        "sonata-project/admin-bundle":                  ">=3.0",
        "sonata-project/doctrine-orm-admin-bundle":     ">=3.0",
        "sonata-project/user-bundle":                   ">=3.0",

        "burgov/key-value-form-bundle":                 "@stable",

        "splash/php-bundle":                            "dev-master",
        "splash/console":                               "dev-master",
        "splash/faker":                                 "dev-master",
        "splash/sonata-admin-splash-bundle":            "dev-master",
        "splash/sonata-admin-monolog-bundle":           "dev-master",

        "splash/soap":                                  "dev-master",
        "splash/mailchimp":                             "dev-master",
        "splash/mailjet":                               "dev-master",
        "splash/sendinblue":                            "dev-master",
        "splash/shopify":                               "dev-master",
        "splash/optilog":                               "dev-master",

        "phpunit/phpunit":                              ">6"
    },
    
    "require-dev": {
        "composer/composer":                            "^1.5",
        "j13k/yaml-lint":                               "^1.1",
        "jakub-onderka/php-parallel-lint":              "^1.0",
        "phpmd/phpmd":                                  "~2.7.0",
        "phpro/grumphp":                                "^0.16",
        "sclable/xml-lint":                             "^0.2.4",
        "sebastian/phpcpd":                             ">3.0",
        "seld/jsonlint":                                "^1.7",
        "sensiolabs/security-checker":                  ">6.0",
        "squizlabs/php_codesniffer":                    "^3.2",
        "escapestudios/symfony2-coding-standard":       "^3.4",
        "friendsofphp/php-cs-fixer":                    ">2.0"
    },
    
    "config": {
        "minimum-stability" :   "dev",
        "preferred-install": {
            "*": "dist"
        }
    },
    
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        },
        "files": [ 
            "vendor/splash/phpcore/inc/Splash.Inc.php",
            "vendor/splash/php-bundle/src/Tests/KernelTestCase.php" 
        ]
    },
    
    "replace": {
        "paragonie/random_compat": "*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    
    "scripts": {
        "auto-scripts": [
            "php bin/console cache:clear",
            "php bin/console assets:install --relative"
        ],
        "post-install-cmd": [
            "@auto-scripts",
            "php vendor/bin/grumphp git:deinit"
        ],
        "post-update-cmd": [
            "@auto-scripts",
            "php vendor/bin/grumphp git:deinit"
        ]
    }
}
